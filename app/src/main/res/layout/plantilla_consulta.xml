<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="50dp"
        android:paddingRight="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/bienvenida_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bienvenido, "
                app:layout_alignSelf="center" />

            <TextView
                android:id="@+id/bienvenida_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#operadorX"
                app:layout_alignSelf="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tipo_pantalla_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Consultar ruta de "
                    app:layout_alignSelf="center"
                    />

                <TextView
                    android:id="@+id/tipo_pantalla_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#tipoPantalla"
                    app:layout_alignSelf="center"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/borrame_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                app:layout_alignSelf="center"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/orden_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Se espera "
                        app:layout_alignSelf="center"
                        />

                    <TextView
                        android:id="@+id/orden_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#tipoPantalla"
                        app:layout_alignSelf="center"
                        />

                    <TextView
                        android:id="@+id/orden_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" en"
                        app:layout_alignSelf="center"
                        />

                </LinearLayout>

                <TextView
                    android:id="@+id/borrame_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    app:layout_alignSelf="center"
                    />

                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>