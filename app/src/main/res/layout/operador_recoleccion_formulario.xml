<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/red_gradient_bg"
    android:gravity="center"
    android:orientation="vertical"
    app:layout_minHeight="70dp">

    <TextView
        android:id="@+id/titulos_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/bebasneue"
        android:gravity="center"
        android:text="Registrar recolección"
        android:textColor="@color/white"
        android:textSize="34sp"
        app:layout_alignSelf="center" />

    <TextView
        android:id="@+id/titulos_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/bebasneue"
        android:gravity="center"
        android:text="#ubicación"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_alignSelf="center" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:background="@drawable/border_card"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingTop="30dp"
        android:paddingRight="20dp"
        android:paddingBottom="30dp">


        <TextView
            android:id="@+id/txtFormatoRegistro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bebasneue"
            android:text="¿Recibió formato de registro del donante?"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_alignSelf="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/boton_si_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/manroperegular"
                android:text="Si"
                android:textColor="@color/black"
                android:textColorHint="#333333"
                android:textSize="16sp"
                app:layout_alignSelf="center" />

            <RadioButton
                android:id="@+id/boton_no_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/manroperegular"
                android:text="No"
                android:textColor="@color/black"
                android:textColorHint="#333333"
                android:textSize="16sp"
                app:layout_alignSelf="center" />

        </LinearLayout>

        <TextView
            android:id="@+id/txtFolio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bebasneue"
            android:text="No. de folio"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_alignSelf="center" />

        <EditText
            android:id="@+id/edtFolio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/manroperegular"
            android:hint="Ingrese el No. de folio"
            android:textColor="@color/black"
            android:textColorHint="#5E5E5E"
            android:textSize="16sp"
            app:layout_alignSelf="center" />

        <TextView
            android:id="@+id/txtResponsable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bebasneue"
            android:text="Responsable de tienda (entrega)"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_alignSelf="center" />

        <EditText
            android:id="@+id/edtResponsable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/manroperegular"
            android:hint="Nombre del responsable"
            android:textColor="@color/black"
            android:textColorHint="#5E5E5E"
            android:textSize="16sp"
            app:layout_alignSelf="center" />

        <TextView
            android:id="@+id/txtCategorias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/bebasneue"
            android:gravity="center"
            android:text="Categorías contenidas en la donación"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_alignSelf="center" />

        <TextView
            android:id="@+id/txtAbarrote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bebasneue"
            android:text="Abarrote"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_alignSelf="center" />

        <EditText
            android:id="@+id/edtAbarrote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/manroperegular"
            android:hint="Cantidad en Kg."
            android:textColor="@color/black"
            android:textColorHint="#5E5E5E"
            android:textSize="16sp"
            app:layout_alignSelf="center" />

        <TextView
            android:id="@+id/txtFrutaVerdura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bebasneue"
            android:text="Fruta y Verdura"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_alignSelf="center" />

        <EditText
            android:id="@+id/edtFrutaVerdura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/manroperegular"
            android:hint="Cantidad en Kg."
            android:textColor="@color/black"
            android:textColorHint="#5E5E5E"
            android:textSize="16sp"
            app:layout_alignSelf="center" />

        <TextView
            android:id="@+id/txtPan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bebasneue"
            android:text="Pan"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_alignSelf="center" />

        <EditText
            android:id="@+id/edtPan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/manroperegular"
            android:hint="Cantidad en Kg."
            android:textColor="@color/black"
            android:textColorHint="#5E5E5E"
            android:textSize="16sp"
            app:layout_alignSelf="center" />

        <TextView
            android:id="@+id/txtNoComestible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bebasneue"
            android:text="No comestible"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_alignSelf="center" />

        <EditText
            android:id="@+id/edtNoComestible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/manroperegular"
            android:hint="Cantidad en Kg."
            android:textColor="@color/black"
            android:textColorHint="#5E5E5E"
            android:textSize="16sp"
            app:layout_alignSelf="center" />

        <Button
            android:id="@+id/boton_continuar_nota"
            android:layout_width="307dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bebasneue"
            android:gravity="center|center_horizontal"
            android:text="Registrar"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="34sp"
            app:cornerRadius="25dp"
            app:layout_alignSelf="center" />

    </LinearLayout>

</LinearLayout>
</ScrollView>