<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/red_gradient_bg"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="30dp"
        android:gravity="center|center_horizontal"
        android:orientation="vertical"

        android:paddingLeft="50dp"
        android:paddingRight="50dp">

        <TextView
            android:id="@+id/titulos_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bebasneue"
            android:gravity="center"
            android:text="Registrar recolección"
            android:textColor="@color/white"
            android:textSize="34sp"
            app:layout_alignSelf="center" />

        <TextView
            android:id="@+id/titulos_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bebasneue"
            android:gravity="center"
            android:text="#ubicación"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_alignSelf="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="50dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_card"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingTop="30dp"
            android:paddingRight="20dp"
            android:paddingBottom="30dp">


            <TextView
                android:id="@+id/rubro_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bebasneue"
                android:text="¿Recibió formato de registro del donante?"
                android:textColor="@color/black"
                android:textSize="24sp"
                app:layout_alignSelf="center" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/boton_si_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/manroperegular"
                    android:text="Si"
                    android:textColor="@color/black"
                    android:textColorHint="#333333"
                    android:textSize="16sp"
                    app:layout_alignSelf="center" />

                <RadioButton
                    android:id="@+id/boton_no_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/manroperegular"
                    android:text="No"
                    android:textColor="@color/black"
                    android:textColorHint="#333333"
                    android:textSize="16sp"
                    app:layout_alignSelf="center" />

            </LinearLayout>

            <TextView
                android:id="@+id/rubro_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bebasneue"
                android:text="No. de folio"
                android:textColor="@color/black"
                android:textSize="24sp"
                app:layout_alignSelf="center" />

            <EditText
                android:id="@+id/entrada_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/manroperegular"
                android:text="Ingrese el No. de folio"
                android:textColor="@color/black"
                android:textColorHint="#333333"
                android:textSize="16sp"
                app:layout_alignSelf="center" />

            <TextView
                android:id="@+id/rubro_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bebasneue"
                android:text="Responsable de tienda (entrega)"
                android:textColor="@color/black"
                android:textSize="24sp"
                app:layout_alignSelf="center" />

            <EditText
                android:id="@+id/entrada_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/manroperegular"
                android:text="Nombre del responsable"
                android:textColor="@color/black"
                android:textColorHint="#333333"
                android:textSize="16sp"
                app:layout_alignSelf="center" />

            <TextView
                android:id="@+id/subtema_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/bebasneue"
                android:gravity="center"
                android:text="Categorías contenidas en la donación"
                android:textColor="@color/white"
                android:textSize="30sp"
                app:layout_alignSelf="center" />

            <TextView
                android:id="@+id/rubro_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bebasneue"
                android:text="Abarrote"
                android:textColor="@color/black"
                android:textSize="24sp"
                app:layout_alignSelf="center" />

            <EditText
                android:id="@+id/entrada_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/manroperegular"
                android:text="Cantidad en Kg"
                android:textColor="@color/black"
                android:textColorHint="#333333"
                android:textSize="16sp"
                app:layout_alignSelf="center" />

            <TextView
                android:id="@+id/rubro_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bebasneue"
                android:text="Fruta y Verdura"
                android:textColor="@color/black"
                android:textSize="24sp"
                app:layout_alignSelf="center" />

            <EditText
                android:id="@+id/entrada_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/manroperegular"
                android:text="Cantidad en Kg"
                android:textColor="@color/black"
                android:textColorHint="#333333"
                android:textSize="16sp"
                app:layout_alignSelf="center" />

            <TextView
                android:id="@+id/rubro_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bebasneue"
                android:text="Pan"
                android:textColor="@color/black"
                android:textSize="24sp"
                app:layout_alignSelf="center" />

            <EditText
                android:id="@+id/entrada_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/manroperegular"
                android:text="Cantidad en Kg"
                android:textColor="@color/black"
                android:textColorHint="#333333"
                android:textSize="16sp"
                app:layout_alignSelf="center" />

            <TextView
                android:id="@+id/rubro_7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bebasneue"
                android:text="No comestible"
                android:textColor="@color/black"
                android:textSize="24sp"
                app:layout_alignSelf="center" />

            <EditText
                android:id="@+id/entrada_7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/manroperegular"
                android:text="Cantidad en Kg"
                android:textColor="@color/black"
                android:textColorHint="#333333"
                android:textSize="16sp"
                app:layout_alignSelf="center" />

            <Button
                android:id="@+id/boton_entrega_1"
                android:layout_width="307dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bebasneue"
                android:gravity="center|center_horizontal"
                android:text="Registrar"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="34sp"
                app:cornerRadius="25dp"
                app:layout_alignSelf="center" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>