<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/red_gradient_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="50dp"
        android:paddingRight="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/bienvenida_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bebasneue"
                android:text="Bienvenido, "
                android:textColor="@color/black"
                android:textSize="34sp"
                app:layout_alignSelf="center" />

            <TextView
                android:id="@+id/bienvenida_operador_nombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bebasneue"
                android:text="#operadorX"
                android:textColor="@color/black"
                android:textSize="34sp"
                app:layout_alignSelf="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tipo_pantalla_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:fontFamily="@font/bebasneue"
                android:text="Consultar recolecciones realizadas"
                android:textColor="@color/white"
                android:textSize="30sp"
                app:layout_alignSelf="center" />

            <TextView
                android:id="@+id/txtFechaNota"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/manropebold"
                android:text="#fecha"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_alignSelf="center" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/indicaciones"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/bebasneue"
                    android:text="Recolecciones del dia:"
                    android:textColor="@color/black"
                    android:textSize="34sp"
                    app:layout_alignSelf="center" />

                <ListView
                    android:id="@+id/lista_recepciones"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:divider="@null"
                    android:dividerHeight="10dp" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>