<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="40dp"
    android:layout_marginTop="20dp"
    android:layout_marginRight="40dp"
    android:layout_marginBottom="20dp"
    android:padding="15dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ubicacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="#ubicacion" />

        <TextView
            android:id="@+id/direccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="#direccionCompleta" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/fruta_verdura_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fruta y verdura(kg): " />

        <TextView
            android:id="@+id/fruta_verdura_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#cantidad" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pan_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pan(kg): " />

        <TextView
            android:id="@+id/pan_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#cantidad" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/abarrote_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Abarrote(kg): " />

        <TextView
            android:id="@+id/abarrote_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#cantidad" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/no_comestible_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No comestible(kg): " />

        <TextView
            android:id="@+id/no_comestible_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#cantidad" />

    </LinearLayout>

</LinearLayout>
