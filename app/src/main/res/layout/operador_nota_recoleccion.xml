<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="50dp"
        android:paddingRight="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="50dp"
            android:paddingRight="50dp">

            <TextView
                android:id="@+id/titulos_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NOTA DE ENTREGA CAPTURADA CON EXITO"
                app:layout_alignSelf="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="50dp"
                android:paddingRight="50dp">

                <TextView
                    android:id="@+id/linea_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="En caso de errores, diríjase con el administrador del sistema."
                    app:layout_alignSelf="center"/>

                <TextView
                    android:id="@+id/linea_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No recibio nota del establecimiento donador"
                    app:layout_alignSelf="center"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/linea_3_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Folio "
                        app:layout_alignSelf="center"/>
                    <TextView
                        android:id="@+id/linea_3_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#folio"
                        app:layout_alignSelf="center"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/fecha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="#fecha"
                    app:layout_alignSelf="center"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/receptor_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recibió de "
                        app:layout_alignSelf="center"/>

                    <TextView
                        android:id="@+id/receptor_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#receptor"
                        app:layout_alignSelf="center"/>

                    <TextView
                        android:id="@+id/receptor_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" en"
                        app:layout_alignSelf="center"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tienda"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="#donador"
                    app:layout_alignSelf="center"/>

                <TextView
                    android:id="@+id/direccion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="#direccion"
                    app:layout_alignSelf="center"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/fruta_verdura_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fruta y verdura: "
                        app:layout_alignSelf="center"/>
                    <TextView
                        android:id="@+id/fruta_verdura_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#numero_kilos"
                        app:layout_alignSelf="center"/>
                    <TextView
                        android:id="@+id/fruta_verdura_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" kg"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/pan_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pan: "
                        app:layout_alignSelf="center"/>
                    <TextView
                        android:id="@+id/pan_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#numero_kilos"
                        app:layout_alignSelf="center"/>
                    <TextView
                        android:id="@+id/pan_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" kg"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/abarrote_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Abarrote: "
                        app:layout_alignSelf="center"/>
                    <TextView
                        android:id="@+id/abarrote_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#numero_kilos"
                        app:layout_alignSelf="center"/>
                    <TextView
                        android:id="@+id/abarrote_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" kg"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/no_comestible_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No comestible: "
                        app:layout_alignSelf="center"/>
                    <TextView
                        android:id="@+id/no_comestible2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#numero_kilos"
                        app:layout_alignSelf="center"/>
                    <TextView
                        android:id="@+id/no_comestible3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" kg"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/boton_entrega_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continuar"
        app:layout_alignSelf="center"/>
</LinearLayout>